<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_lesson_indicator"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#000000"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/tv_lesson_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:textColor="#000000"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_lesson_link"

        android:layout_marginStart="10dp"

        app:layout_constraintStart_toEndOf="@id/tv_lesson_indicator"
        />
    <ImageButton
        android:id="@+id/iv_lesson_link"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:src="@drawable/ic_baseline_remove_red_eye_24"

        android:contentDescription="@string/lesson_link_button"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="0dp"



        android:adjustViewBounds="true"
        android:scaleType="fitCenter"

        android:background="@color/colorPrimary"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
